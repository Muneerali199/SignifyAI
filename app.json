{
  "expo": {
    "name": "SignSpeak - ISL Translator",
    "slug": "signspeak-isl-translator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "signspeak",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.signspeak.isltranslator",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to recognize sign language gestures",
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech recognition",
        "NSPhotoLibraryUsageDescription": "This app requires access to the photo library to save captured images"
      }
    },
    "android": {
      "package": "com.signspeak.isltranslator",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#4F46E5"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "VIBRATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-camera"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2cb658b6-0e45-4b27-b66b-3a7811125412"
      }
    },
    "owner": "muneer_ali"
  }
}
